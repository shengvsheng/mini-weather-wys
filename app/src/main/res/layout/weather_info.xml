<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/toolbar"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_title_city"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/title_city" />

        <TextView
            android:id="@+id/tv_title_city"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_toRightOf="@+id/iv_title_city"
            android:gravity="center"
            android:text="北京天气"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/iv_title_location"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toLeftOf="@+id/iv_title_share"
            android:src="@drawable/title_location" />
        <ImageView
            android:id="@+id/iv_title_share"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toLeftOf="@+id/iv_title_update"
            android:src="@drawable/title_share" />
        <ImageView
            android:id="@+id/iv_title_update"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/title_update" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout"
        android:background="@drawable/biz_plugin_weather_shenzhen_bg">
        
    </RelativeLayout>
</RelativeLayout>